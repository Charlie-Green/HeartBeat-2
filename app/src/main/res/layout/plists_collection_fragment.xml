<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for .ui.main.plist.PlaylistsCollectionFragment -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_playlist_gradient" >

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pagerPlists"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:fabCustomSize="@dimen/fab_size_default"
        android:src="@drawable/ic_add"
        app:backgroundTint="?android:colorPrimary"
        app:tint="?android:colorBackground"
        android:tooltipText="@string/add_playlist" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/fabAdd"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_edit"
        app:fabCustomSize="@dimen/fab_size_default"
        app:backgroundTint="?android:colorPrimary"
        app:tint="?android:colorBackground"
        android:tooltipText="@string/edit_playlist" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/fabEdit"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_delete"
        app:fabCustomSize="@dimen/fab_size_default"
        app:backgroundTint="@color/danger"
        app:tint="?android:colorBackground"
        android:tooltipText="@string/delete_playlist" />

    <ProgressBar
        android:id="@+id/prBar"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:theme="@style/ProgressBarPrimaryColorTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>