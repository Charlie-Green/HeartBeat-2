<resources>

    <!-- Base style for title text -->
    <style name="Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Title.OnPrimaryColor">
        <item name="android:textColor">?android:colorBackground</item>
    </style>
    <style name="Title.OnDefaultBackground">
        <item name="android:textColor">?colorPrimary</item>
    </style>


    <!-- Base style for big title text. -->
    <style name="Title.Big">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Title.Big.OnPrimaryColor">
        <item name="android:textColor">?android:colorBackground</item>
    </style>
    <style name="Title.Big.OnDefaultBackground">
        <item name="android:textColor">?colorPrimary</item>
    </style>


    <!-- Base style for a subtitle text -->
    <style name="Subtitle">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Subtitle.OnPrimaryColor">
        <item name="android:textColor">?android:colorBackground</item>
        <item name="android:alpha">0.7</item>
    </style>
    <style name="Subtitle.OnDefaultBackground">
        <item name="android:textColor">?android:subtitle</item>
    </style>


    <!-- Base style for a small label -->
    <style name="Label">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="Label.OnPrimaryColor">
        <item name="android:textColor">?android:colorBackground</item>
    </style>
    <style name="Label.OnDefaultBackground">
        <item name="android:textColor">?colorPrimary</item>
    </style>


    <!-- Base style for a label which is not limited (much) in space -->
    <style name="LargerLabel">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="LargerLabel.OnPrimaryColor">
        <item name="android:textColor">?android:colorBackground</item>
    </style>
    <style name="LargerLabel.OnDefaultBackground">
        <item name="android:textColor">?colorPrimary</item>
    </style>


    <!-- Style for a label to display current step in a multi-staged process. -->
    <style name="StepLabel">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Style for a small to notify about an error, mostly invalid input. -->
    <style name="ErrorLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorError</item>
    </style>

</resources>
